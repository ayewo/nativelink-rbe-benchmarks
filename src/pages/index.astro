---
import Layout from '../layouts/Layout.astro';
import TimeSeriesChart from '../components/TimeSeriesChart.astro';
---

<Layout title="Performance Benchmarks">
  <main>
    <div class="container">
      <h1>Nativelink Performance Benchmarks</h1>
      <p>Remote caching and execution of the <a href="https://github.com/llvm/llvm-project"><code>llvm-project</code></a>.</p>
      
      <TimeSeriesChart />
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  h1 {
    color: #2563eb;
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }
  
  .metrics-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .metric-card {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }
  
  .metric-card:hover {
    transform: translateY(-4px);
  }
  
  .metric-card h3 {
    color: #1e40af;
    margin-bottom: 1rem;
  }
  
  .metric-card p {
    color: #64748b;
    line-height: 1.6;
  }
</style>
